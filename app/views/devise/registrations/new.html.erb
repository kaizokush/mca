<div class="col-md-6 col-xs-12">
  <h2 align="center">Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    <%= f.input :name%>
    <%= f.input :gender, :as => :radio_buttons, :collection =>['Male', 'Female']%>
    <%= f.input :email, autofocus: true %>
    <%= f.input :password, autocomplete: "off" %>
    <%= f.input :password_confirmation, autocomplete: "off" %>
    <%= f.input :dob, :as => :date, :start_year => Date.today.year - 18, :end_year => Date.today.year - 99, :month => Date.today.month, :order => [:day, :month, :year], :label => "Day of Birth",:prompt => "Select"%>
    <%= f.input :contactno, :as => :tel%>
    <%= f.input :tadd, label: 'Temporary Address'%>
    <%= f.input :padd, label: 'Permanent Address'%>
    <%= f.input :hobby, label: 'Hobbies', :as => :text%>
    <%= f.button :submit, 'Sign up' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
