<div class="col-md-6 col-xs-12">
<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.input :name%>
  <%= f.input :gender%>
  <%= f.input :email, autofocus: true %>
  <%= f.input :password, autocomplete: "off" %>
  <%= f.input :password_confirmation, autocomplete: "off" %>
  <%= f.input :dob, :as => :date, :start_year => Date.today.year - 18, :end_year => Date.today.year - 99, :month => Date.today.month, :order => [:day, :month, :year], :label => "Day of Birth",:prompt => "Select"%>
  <%= f.input :contactno,label: 'Contact Number'%>
  <%= f.input :tadd, label: 'Temporary Address'%>
  <%= f.input :padd, label: 'Permanent Address'%>
  <%= f.input :hobby, label: 'Hobbies', :as => :text%>
  <%= f.input :current_password, label: 'Current Password'%><i>(we need your current password to confirm your changes)</i>
  <%= f.submit "Update" %>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
</div>
